{
  "manifest_version": 2,
  "name": "ScreenshotToll",
  "version": "0.0.1",
  "description": "Make screenshots easy",
  "icons": {
    "16": "icons/16x16.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "",
    "default_icon": {
      "16": "icons/16x16.png"
    },
    "default_title": "FigLeaf"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "storage"
  ],
  "web_accessible_resources": [
    "images/*.png",
    "images/*.svg",
    "fonts/*.woff"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; font-src * "
}
